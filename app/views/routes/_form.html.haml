= semantic_form_for @route, :html => { :class => 'form-horizontal' } do |f|
  = f.input :title
  = f.input :description
  = f.input :difficulty
  = f.input :continent
  = f.input :region
  = f.input :mount
  = f.input :photo
  = f.submit nil, :class => 'btn btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), mounts_path, :class => 'btn'
